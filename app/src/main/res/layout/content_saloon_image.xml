<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redishbutton"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.owner.saloon.craftystudio.saloonowner.SaloonImageActivity"
    tools:showIn="@layout/activity_saloon_image">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Add Profile Images"
                android:textAlignment="center"
                android:textColor="@color/whitish"
                android:textSize="20sp"
                android:textStyle="italic|normal" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="selectProfileImage"
                android:visibility="gone"
                app:cardBackgroundColor="@color/whitish"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/light_redishbutton"
                android:onClick="selectProfileImage"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/saloonimage_showcase_imageView"
                    android:layout_width="200dp"
                    android:layout_height="125dp"
                    android:layout_gravity="left"
                    android:layout_margin="0dp"
                    android:maxHeight="200dp"
                    android:minHeight="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imageviewbordercustomize" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/whitish"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Add ShowCase Images"
                    android:textAlignment="center"
                    android:textColor="@color/whitish"
                    android:textSize="20sp"
                    android:textStyle="italic|normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:background="@color/light_redishbutton"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/saloonimage_image1_imageView"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:maxHeight="200dp"
                        android:maxWidth="100dp"
                        android:minHeight="20dp"
                        android:onClick="selectImage1PhotoClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageviewbordercustomize" />

                    <ImageView
                        android:id="@+id/saloonimage_image2_imageView"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:maxHeight="200dp"
                        android:maxWidth="100dp"
                        android:minHeight="20dp"
                        android:onClick="addImage2PhotoClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageviewbordercustomize" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/light_redishbutton"
                    android:orientation="horizontal">


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="@color/redishdark"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/light_redishbutton"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/saloonimage_image3_imageView"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:maxHeight="200dp"
                        android:maxWidth="100dp"
                        android:minHeight="20dp"
                        android:onClick="addImage3PhotoClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageviewbordercustomize"

                        />

                    <ImageView
                        android:id="@+id/saloonimage_image4_imageView"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:maxHeight="200dp"
                        android:maxWidth="100dp"
                        android:minHeight="20dp"
                        android:onClick="addImage4PhotoClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageviewbordercustomize"

                        />


                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="@color/redishdark"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@color/light_redishbutton"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/saloonimage_image5_imageView"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:maxHeight="200dp"
                        android:maxWidth="100dp"
                        android:minHeight="20dp"
                        android:layout_marginBottom="50dp"
                        android:onClick="addImage5PhotoClick"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageviewbordercustomize"

                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="uploadImageToFireBase"
        android:text="Upload Images "
        android:textColor="@color/redishdark"
        android:visibility="gone" />

</LinearLayout>
