<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redish"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.owner.saloon.craftystudio.saloonowner.SaloonImageActivity"
    tools:showIn="@layout/activity_saloon_image">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whitish"
                android:textStyle="italic|normal"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:text="Saloon Images"
                android:textAlignment="center" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="selectProfileImage"
                app:cardBackgroundColor="@color/whitish"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/whitish"
                    android:onClick="selectProfileImage"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/saloonimage_showcase_imageView"
                        android:layout_width="200dp"
                        android:layout_height="125dp"
                        android:layout_gravity="left"
                        android:layout_margin="0dp"
                        android:minHeight="200dp"

                        android:src="@drawable/imageviewbordercustomize" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="serif"
                        android:text="Add Profile Image"
                        android:textAlignment="center"
                        android:textColor="@color/purple"
                        android:textSize="18sp" />


                </LinearLayout>


            </android.support.v7.widget.CardView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/roundbuttonbordercustomize"
                android:onClick="addShowcasePhotoClick"
                android:text="Add Profile photo"
                android:textColor="@color/white"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/whitish"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="selectImage1PhotoClick"

                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/saloonimage_image1_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:maxHeight="50dp"
                            android:maxWidth="100dp"
                            android:minHeight="20dp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="serif"
                            android:text="Add 1 ShowCase \nImage"
                            android:textAlignment="center"
                            android:textColor="@color/purple"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:cardBackgroundColor="@color/redishdark"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="addImage2PhotoClick"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/saloonimage_image2_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:maxHeight="50dp"
                            android:maxWidth="100dp"
                            android:minHeight="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="serif"
                            android:text="Add 2 ShowCase \nImage"
                            android:textAlignment="center"
                            android:textColor="@color/purple"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:cardBackgroundColor="@color/redishdark"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="addImage3PhotoClick"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/saloonimage_image3_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:maxHeight="50dp"
                            android:maxWidth="100dp"
                            android:minHeight="20dp"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="serif"
                            android:text="Add 3 ShowCase \nImage"
                            android:textAlignment="center"
                            android:textColor="@color/purple"
                            android:textSize="18sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="addImage4PhotoClick"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/saloonimage_image4_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:maxHeight="50dp"
                            android:maxWidth="100dp"
                            android:minHeight="20dp"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="serif"
                            android:text="Add 4 ShowCase \nImage"
                            android:textAlignment="center"
                            android:textColor="@color/purple"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="addImage5PhotoClick"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/saloonimage_image5_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:maxHeight="50dp"
                            android:maxWidth="100dp"
                            android:minHeight="20dp"

                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="serif"
                            android:text="Add 5 ShowCase \nImage"
                            android:textAlignment="center"
                            android:textColor="@color/purple"
                            android:textSize="18sp" />


                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>


                    <ImageView
                        android:id="@+id/saloonimage_image1_imageView1"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        android:minHeight="100dp"
                        android:onClick="addImage1PhotoClick"

                        />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>

                    <ImageView
                        android:id="@+id/saloonimage_image2_imageView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.00"
                        android:minHeight="100dp"
                        android:onClick="addImage1PhotoClick"

                        />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>


                    <ImageView
                        android:id="@+id/saloonimage_image3_imageView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:minHeight="100dp"
                        android:onClick="addImage1PhotoClick"

                        />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"></View>


                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@color/white"></View>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/roundbuttonbordercustomize"
                android:onClick="selectImageFromGallery"
                android:text="Add ShowCase Photo"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="uploadImageToFireBase"
        android:text="Upload Images "
        android:textColor="@color/redishdark" />

</LinearLayout>
