        android:layout_height="wrap_content"
        android:id="@+id/orderAdapterRow_saloonName_textview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderAdapterRow_orderDate_textview"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderAdapterRow_orderStatus_textview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
