<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redishbutton"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.owner.saloon.craftystudio.saloonowner.PhoneNumerActivity"
    tools:showIn="@layout/activity_phone_numer">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/logoforsaloon"
        android:visibility="gone" />


    <TextView
        android:id="@+id/heading_phone_number_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="Enter your phone number"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/otp_Linearlayout"
        android:background="@color/light_redishbutton"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_action_password" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />


        <EditText
            android:id="@+id/phoneNumber_otp_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/whitish"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/light_redishbutton"
        android:id="@+id/phonenumber_Linearlayout"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_action_dial" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/phoneNumber_phoneNumber_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter phone number"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/whitish" />


    </LinearLayout>

    <Button
        android:id="@+id/phoneNumber_verifyOtp_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundbuttonbordercustomize"
        android:onClick="verifyOtp"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/phoneNumber_sentOtp_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundbuttonbordercustomize"
        android:onClick="sendotp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="visible" />


</LinearLayout>
